<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LorealAvaloniaUI.Views.DashboardView">
    <StackPanel Spacing="10" Margin="20">
        <!-- Header -->
        <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
            <Image Source="avares://LorealAvaloniaUI/Assets/warning_icon.png" Width="24" Height="24" />
            <TextBlock Text="Storage Critically Low" Foreground="White" FontSize="20" FontWeight="Bold" />
        </StackPanel>
        
        <!-- Progress Bar -->
        <ProgressBar Minimum="0" Maximum="200" Value="186" Foreground="Red" Height="10" />
        <TextBlock Text="186 GB Used of 200 GB" Foreground="White" FontSize="14" />
        <TextBlock Text="14 GB Free" Foreground="White" FontSize="14" HorizontalAlignment="Right" />
        
        <!-- Storage Sections -->
        <StackPanel Orientation="Horizontal" Spacing="10">
            <Border Background="#1E1E1E" CornerRadius="10" Margin="10" Width="140" Height="120">
                <StackPanel Spacing="5" HorizontalAlignment="Center">
                    <Image Source="avares://LorealAvaloniaUI/Assets/downloads_icon.png" Width="40" Height="40" />
                    <TextBlock Text="Downloads" Foreground="White" FontSize="16" FontWeight="Bold" />
                    <Button Content="Free up space" Background="#333" Foreground="White" />
                </StackPanel>
            </Border>
            
            <Border Background="#1E1E1E" CornerRadius="10" Margin="10" Width="140" Height="120">
                <StackPanel Spacing="5" HorizontalAlignment="Center">
                    <Image Source="avares://LorealAvaloniaUI/Assets/onedrive_icon.png" Width="40" Height="40" />
                    <TextBlock Text="One Drive" Foreground="White" FontSize="16" FontWeight="Bold" />
                    <Button Content="Free up local space" Background="#333" Foreground="White" />
                </StackPanel>
            </Border>
            
            <Border Background="#1E1E1E" CornerRadius="10" Margin="10" Width="140" Height="120">
                <StackPanel Spacing="5" HorizontalAlignment="Center">
                    <Image Source="avares://LorealAvaloniaUI/Assets/outlook_icon.png" Width="40" Height="40" />
                    <TextBlock Text="Outlook" Foreground="White" FontSize="16" FontWeight="Bold" />
                    <Button Content="Show details" Background="#333" Foreground="White" />
                </StackPanel>
            </Border>
        </StackPanel>
        
        <!-- Cleanup Summary -->
        <TextBlock Text="Previous clean up summary:" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,10,0,0" />
        <TextBlock Text="Date: 26-Jan-2025" Foreground="White" FontSize="14" />
        <TextBlock Text="Cleared up space: 10 GB" Foreground="White" FontSize="14" />
        <TextBlock Text="Total available after run: 170 GB of 200 GB" Foreground="White" FontSize="14" />
    </StackPanel>
</UserControl>